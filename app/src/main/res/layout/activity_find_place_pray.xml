<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/cari_masjid"
        android:layout_centerHorizontal="true"
        android:text="Cari Wihara"
        android:onClick="wihara"/>
    <Button
        android:id="@+id/cari_masjid"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="Cari Masjid"
        android:onClick="masjid"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/cari_masjid"
        android:layout_centerHorizontal="true"
        android:text="Cari Gereja"
        android:onClick="gereja"/>



</RelativeLayout>
